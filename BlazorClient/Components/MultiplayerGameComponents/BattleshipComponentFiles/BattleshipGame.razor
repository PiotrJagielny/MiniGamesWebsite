@inherits BattleshipGameBase

<BattleshipBoard AreButtonsClickable="IsEnemyFound == false" Board="BattleshipLogic.GetUserBoard()" ButtonClickEvent="UserBoardClicked">
    <Title>
        User Board
    </Title>
</BattleshipBoard>

<BattleshipBoard AreButtonsClickable="IsYourTurn == true"
                 Board="BattleshipLogic.GetEnemyBoard()" ButtonClickEvent="EnemyBoardClicked">
    <Title>
        Enemy Board
    </Title>
</BattleshipBoard>

<button disabled="@(IsEnemyFound == true)" @onclick="FindEnemy">Play</button>


<ShowMessages Messages="@Messages"></ShowMessages>





